@page "/new-bug"
<h3>Add New Bug</h3>

<EditForm Model="AddBug">
    <InputText placeholder="Enter Title" @bind-Value="@AddBug.Title" />
    <InputText placeholder="Enter Description" @bind-Value="@AddBug.Description" />
    <InputNumber @bind-Value="@AddBug.Priority" placeholder="Enter Priority" />
    <button type="submit">Add Bug</button>
</EditForm>

@code {
    public Bug AddBug { get; set; }
}
